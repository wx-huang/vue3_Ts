{
  "useTabs": false,
  "tabWidth": 2,
  "printWidth": 500,
  "singleQuote": true,
  "trailingComma": "none",
  "semi": false,
  "format": {
    "defaultFormatter": {
      "html": "js-beautify-html",
      "js": "prettier"
    },
    "defaultFormatterOptions": {
      "js-beautify-html": {
        "wrap_attributes": "auto",
        "wrap_line_length": 500,
        "end_with_newline": false,
        "semi": true,
        "singleQuote": true
      },
      "prettier": {
        "semi": true,
        "singleQuote": true
      }
    }
  }
}
